             <Style x:Key="colorDataGridCellStyle" TargetType="{x:Type DataGridCell}">
                 <Style.Triggers>
                    <DataTrigger Binding="{Binding Status}" Value="OFF">
                     <Setter Property="Foreground" Value="Black" />
                     <Setter Property="FontWeight" Value="Bold" />
